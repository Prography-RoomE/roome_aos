<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.RoomE" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- 상태바 -->
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Splash Screen -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/primary_primary</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">500</item>

        <!-- Activity 전환 Animation 비활성화 -->
        <item name="android:windowAnimationStyle">@null</item>

        <item name="android:buttonStyleToggle">@style/AppCompatToggleButtonStyle</item>
    </style>

    <style name="Theme.RoomE" parent="Base.Theme.RoomE" />

    <!-- 토글 버튼 그림자 제거 -->
    <style name="AppCompatToggleButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <!-- Bottom Navigation Shift 효과 제거 -->
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.App.BottomNavigationView</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.App.BottomNavigationView</item>

        <!-- font 적용 -->
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="TextAppearance.App.BottomNavigationView" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OpinionEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/transparent</item> <!-- focus false 경우 밑줄 부분 -->
        <item name="colorControlActivated">@color/primary_primary</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor</item> <!-- cursor color -->
        <item name="android:textColorHighlight">@color/gray90</item> <!-- text selection -->
    </style>
</resources>