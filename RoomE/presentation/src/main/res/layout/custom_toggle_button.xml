<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null">

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:background="@drawable/shape_chip"
        android:gravity="center"
        android:text=""
        tools:textOn=""
        tools:textOff="" />

    <TextView
        android:id="@+id/tv_mbti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_mbti_desc"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="12dp"

        android:gravity="center"
        tools:text="E"
        style="@style/title2_bold"
        android:textColor="@color/on_surface" />

    <TextView
        android:id="@+id/tv_mbti_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mbti"
        android:layout_marginBottom="12dp"

        android:gravity="center"
        tools:text="μ™Έν–¥ν•"
        style="@style/body2_regular"
        android:textColor="@color/on_surface_variant" />

</androidx.constraintlayout.widget.ConstraintLayout>
