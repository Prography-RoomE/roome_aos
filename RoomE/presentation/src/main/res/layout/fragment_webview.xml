<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_web_view"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:contentInsetStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/surface">

            <TextView
                android:id="@+id/tv_web_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:text="서비스 이용약관"
                style="@style/title3_bold"
                android:textColor="@color/on_surface"/>

            <ImageButton
                android:id="@+id/ib_cancel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_cancel"
                android:background="@color/transparent"
                android:layout_gravity="end"
                android:layout_marginEnd="12dp"
                tools:ignore="ContentDescription" />
        </androidx.appcompat.widget.Toolbar>

        <WebView
            android:id="@+id/view_web"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tb_web_view"
            app:layout_constraintBottom_toTopOf="@id/btn_agree"
            android:layout_marginBottom="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_agree"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="24dp"

            android:background="@drawable/shape_radius_12"
            android:backgroundTint="@color/primary_primary"
            android:text="동의"
            style="@style/title3_bold"
            android:textColor="@color/surface"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>