<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface_container_low">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_main_setting"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:contentInsetStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/surface">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/main_setting_title"
                style="@style/headline2_bold"
                android:textColor="@color/on_surface"/>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/tv_tos"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@id/tb_main_setting"
            android:background="@color/surface"

            android:text="약관 및 개인정보 처리 동의"
            style="@style/body1_regular"
            android:textColor="@color/on_surface"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"/>
        
        <ImageButton
            android:id="@+id/ib_tos"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/tv_tos"
            app:layout_constraintBottom_toBottomOf="@id/tv_tos"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"

            android:src="@drawable/ic_arrow_next"
            android:background="@color/transparent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_privacy"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@id/tv_tos"
            android:background="@color/surface"

            android:text="개인정보 처리방침"
            style="@style/body1_regular"
            android:textColor="@color/on_surface"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"/>

        <ImageButton
            android:id="@+id/ib_privacy"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/tv_privacy"
            app:layout_constraintBottom_toBottomOf="@id/tv_privacy"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"

            android:src="@drawable/ic_arrow_next"
            android:background="@color/transparent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy"
            android:layout_marginTop="16dp"
            android:background="@color/surface"

            android:text="앱 버전"
            style="@style/body1_regular"
            android:textColor="@color/on_surface"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"/>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_version"
            app:layout_constraintBottom_toBottomOf="@id/tv_version"
            app:layout_constraintEnd_toStartOf="@id/ib_update"
            android:layout_marginEnd="-8dp"
            app:layout_goneMarginEnd="24dp"

            style="@style/body1_regular"
            android:textColor="@color/on_surface_variant"
            android:text="최신 버전"/>

        <ImageButton
            android:id="@+id/ib_update"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/tv_version"
            app:layout_constraintBottom_toBottomOf="@id/tv_version"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:visibility="gone"

            android:src="@drawable/ic_arrow_next"
            android:background="@color/transparent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_unlink"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@id/tv_version"
            android:layout_marginTop="16dp"
            android:background="@color/surface"

            android:text="탈퇴하기"
            style="@style/body1_regular"
            android:textColor="@color/on_surface"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"/>

        <ImageButton
            android:id="@+id/ib_unlink"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/tv_unlink"
            app:layout_constraintBottom_toBottomOf="@id/tv_unlink"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"

            android:src="@drawable/ic_arrow_next"
            android:background="@color/transparent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_current_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_unlink"
            android:layout_marginTop="16dp"

            tools:text="앱 버전 1.0.1 (3)"
            style="@style/body3_regular"
            android:textColor="@color/on_surface_variant"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"/>

        <TextView
            android:id="@+id/tv_opensource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_current_version"
            android:layout_marginTop="16dp"

            android:text="오픈소스 라이선스 보기"
            style="@style/body3_regular"
            android:textColor="@color/on_surface_variant"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>