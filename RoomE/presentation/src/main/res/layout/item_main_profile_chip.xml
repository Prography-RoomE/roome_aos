<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/btn_chip"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_main_profile_chip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"/>

    <TextView
        android:id="@+id/tv_chip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/btn_chip"
        app:layout_constraintStart_toStartOf="@id/btn_chip"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:translationZ="10dp"

        tools:text="방탈출 횟수"
        style="@style/caption"
        android:textColor="@color/on_surface_variant"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_context_type_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_chip_context"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_context_type_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_chip_context_1, tv_chip_context_2"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_context_type_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_profile_color"
        android:visibility="gone"/>

    <!-- 방탈출 횟수, MBTI 사용 -->
    <TextView
        android:id="@+id/tv_chip_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@id/btn_chip"
        app:layout_constraintEnd_toEndOf="@id/btn_chip"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:translationZ="10dp"

        tools:text="99,999"
        style="@style/title1_bold"
        android:textColor="@color/on_surface"/>

    <!-- 위 2개와 프로필 색을 제외한 문항의 경우 사용 -->
    <TextView
        android:id="@+id/tv_chip_context_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@id/btn_chip"
        app:layout_constraintEnd_toEndOf="@id/btn_chip"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:translationZ="10dp"

        tools:text="이과형 문제"
        style="@style/label_bold"
        android:textColor="@color/on_surface"/>

    <TextView
        android:id="@+id/tv_chip_context_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/tv_chip_context_1"
        app:layout_constraintEnd_toEndOf="@id/tv_chip_context_1"

        android:translationZ="10dp"

        tools:text="억지 활동성"
        style="@style/label_bold"
        android:textColor="@color/on_surface"/>

    <!-- 프로필 색상인 경우 사용 -->
    <ImageView
        android:id="@+id/iv_profile_color"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/shape_radius_360_with_stroke"
        app:layout_constraintBottom_toBottomOf="@id/btn_chip"
        app:layout_constraintEnd_toEndOf="@id/btn_chip"
        android:layout_margin="16dp"

        android:translationZ="10dp"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>