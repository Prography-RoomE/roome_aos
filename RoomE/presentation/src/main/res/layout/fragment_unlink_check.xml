<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface">

        <include
            android:id="@+id/tb_unlink"
            layout="@layout/toolbar_unlink" />

        <TextView
            android:id="@+id/tv_check_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tb_unlink"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"

            android:text="@string/unlink_check_title"
            style="@style/title2_bold"
            android:textColor="@color/on_surface" />

        <TextView
            android:id="@+id/tv_check_context"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_check_title"
            android:layout_margin="24dp"

            android:text="@string/unlink_check_context"
            style="@style/body1_regular"
            android:textColor="@color/on_surface_variant" />

        <CheckBox
            android:id="@+id/cb_option"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_check_context"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"

            android:button="@null"
            android:background="@drawable/selector_circle_check_box" />

        <TextView
            android:id="@+id/tv_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="@id/cb_option"
            app:layout_constraintBottom_toBottomOf="@id/cb_option"
            app:layout_constraintStart_toEndOf="@id/cb_option"
            android:layout_marginStart="8dp"

            android:text="@string/unlink_check_toggle"
            android:includeFontPadding="false"
            style="@style/body2_regular"
            android:textColor="@color/on_surface" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_unlink"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="24dp"

            android:background="@drawable/shape_radius_12"
            android:backgroundTint="@color/on_surface_a12"

            android:text="@string/unlink_check_btn_text"
            style="@style/body1_regular"
            android:textStyle="bold"
            android:textColor="@color/on_surface_variant" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>