<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface"
        tools:context=".view.profile.ProfileActivity">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="lottie_profile, tv_profile_loading"
            android:visibility="visible"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="btn_move_profile, btn_save_profile, tg_square, tg_vertical, iv_profile, tb_profile"
            android:visibility="gone"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_base_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="ic_profile_square, ic_profile_vertical, view_profile_back"
            android:visibility="gone"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_profile_loading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="16dp"

            android:scaleType="centerCrop"

            app:lottie_speed="2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="animation_profile.json" />

        <TextView
            android:id="@+id/tv_profile_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lottie_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:text="선택하신 정보에 따라\n프로필을 생성 중이에요"
            android:gravity="center"
            style="@style/headline3_bold"
            android:textColor="@color/on_surface"/>

        <Toolbar
            android:id="@+id/tb_profile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:contentInsetStart="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"

                android:src="@drawable/ic_arrow_back"
                android:background="@color/transparent"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="프로필 이미지"
                style="@style/title3_bold"
                android:textColor="@color/on_surface"/>
        </Toolbar>

        <View
            android:id="@+id/view_profile_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/iv_profile"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/surface_container_low"/>

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/tb_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:background="@color/transparent"
            tools:ignore="ContentDescription" />

        <include layout="@layout/layout_profile_square"
            android:id="@+id/ic_profile_square"
            android:layout_width="360dp"
            android:layout_height="360dp"
            app:layout_constraintTop_toTopOf="@id/iv_profile"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            />

        <include layout="@layout/layout_profile_vertical"
            android:id="@+id/ic_profile_vertical"
            android:layout_width="270dp"
            android:layout_height="360dp"
            app:layout_constraintTop_toTopOf="@id/iv_profile"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>


        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/tg_square"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tg_vertical"
            app:layout_constraintTop_toBottomOf="@id/iv_profile"
            android:layout_marginTop="24dp"

            android:layout_marginStart="24dp"
            android:layout_marginEnd="6dp"

            android:background="@drawable/shape_chip"
            android:checked="true"

            android:text="1:1 정방형"
            android:textOn="1:1 정방형"
            android:textOff="1:1 정방형"
            style="@style/title3_bold"
            android:textColor="@color/on_surface"/>

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/tg_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toEndOf="@id/tg_square"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tg_square"
            app:layout_constraintBottom_toBottomOf="@id/tg_square"

            android:layout_marginEnd="24dp"
            android:layout_marginStart="6dp"

            android:background="@drawable/shape_chip"

            android:text="3:4 세로형"
            android:textOn="3:4 세로형"
            android:textOff="3:4 세로형"
            style="@style/title3_bold"
            android:textColor="@color/on_surface"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save_profile"
            android:layout_width="0dp"
            android:layout_height="50dp"

            app:layout_constraintBottom_toTopOf="@id/btn_move_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="24dp"

            android:background="@drawable/shape_radius_12"
            android:backgroundTint="@color/primary_primary"

            android:text="이미지 저장하기"
            style="@style/title3_bold"
            android:textColor="@color/surface"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_move_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="12dp"

            android:background="@color/transparent"
            android:layout_marginBottom="24dp"

            android:text="프로필 페이지로 이동"
            style="@style/title3_bold"
            android:textColor="@color/on_surface_variant"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>