<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface"
        tools:context=".view.main.MainActivity">

        <FrameLayout
            android:id="@+id/fc_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_navi" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navi"

            android:layout_width="match_parent"
            android:layout_height="83dp"

            app:itemPaddingTop="7dp"
            app:itemPaddingBottom="30dp"

            app:layout_constraintBottom_toBottomOf="parent"

            android:background="@drawable/shape_bottom_navi"
            app:menu="@menu/menu_bottom_navi"
            app:itemBackground="@null"

            style="@style/CustomBottomNavigationView"
            app:labelVisibilityMode="labeled"

            app:itemTextColor="@color/selector_bottom_navi_color"
            app:itemIconTint="@color/selector_bottom_navi_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>