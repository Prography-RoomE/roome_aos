<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface"
        tools:context=".view.main.MainActivity">
        
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_main"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent">
            
            <ImageButton
                android:id="@+id/btn_cancel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="BACK"
                android:src="@drawable/ic_cancel"
                android:background="@color/transparent"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/tb_main"
            app:layout_constraintBottom_toTopOf="@id/bottom_navi" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navi"

            android:layout_width="match_parent"
            android:layout_height="83dp"

            app:itemPaddingTop="7dp"
            app:itemPaddingBottom="30dp"

            app:layout_constraintBottom_toBottomOf="parent"

            app:menu="@menu/menu_bottom_navi"
            app:itemBackground="@null"

            android:theme="@style/CustomBottomNavigationView"
            app:labelVisibilityMode="labeled"

            app:itemTextColor="@color/selector_bottom_navi_color"
            app:itemIconTint="@color/selector_bottom_navi_color"

            android:background="@color/surface"
            android:outlineSpotShadowColor="#4D000000"
            android:elevation="0.33dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>