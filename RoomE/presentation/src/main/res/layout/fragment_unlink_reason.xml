<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface">

        <include
            android:id="@+id/tb_unlink"
            layout="@layout/toolbar_unlink" />

        <TextView
            android:id="@+id/tv_reason_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tb_unlink"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"

            android:text="@string/unlink_reason_title"
            style="@style/title2_bold"
            android:textColor="@color/on_surface" />

        <TextView
            android:id="@+id/tv_reason_1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_reason_title"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="16dp"

            android:text="@string/unlink_reason_1"
            style="@style/body1_regular"
            android:textColor="@color/on_surface" />

        <ImageView
            android:id="@+id/iv_reason_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_next"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/tv_reason_1"
            app:layout_constraintTop_toTopOf="@id/tv_reason_1"
            app:layout_constraintBottom_toBottomOf="@id/tv_reason_1"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_reason_2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_reason_1"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"

            android:text="@string/unlink_reason_2"
            style="@style/body1_regular"
            android:textColor="@color/on_surface" />

        <ImageView
            android:id="@+id/iv_reason_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_next"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/tv_reason_2"
            app:layout_constraintTop_toTopOf="@id/tv_reason_2"
            app:layout_constraintBottom_toBottomOf="@id/tv_reason_2"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_reason_3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_reason_2"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"

            android:text="@string/unlink_reason_3"
            style="@style/body1_regular"
            android:textColor="@color/on_surface" />

        <ImageView
            android:id="@+id/iv_reason_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_next"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/tv_reason_3"
            app:layout_constraintTop_toTopOf="@id/tv_reason_3"
            app:layout_constraintBottom_toBottomOf="@id/tv_reason_3"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_reason_4"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_reason_3"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"

            android:text="@string/unlink_reason_4"
            style="@style/body1_regular"
            android:textColor="@color/on_surface" />

        <ImageView
            android:id="@+id/iv_reason_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_next"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/tv_reason_4"
            app:layout_constraintTop_toTopOf="@id/tv_reason_4"
            app:layout_constraintBottom_toBottomOf="@id/tv_reason_4"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_reason_5"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_reason_4"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"

            android:text="@string/unlink_reason_5"
            style="@style/body1_regular"
            android:textColor="@color/on_surface" />

        <ImageView
            android:id="@+id/iv_reason_5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_next"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/tv_reason_5"
            app:layout_constraintTop_toTopOf="@id/tv_reason_5"
            app:layout_constraintBottom_toBottomOf="@id/tv_reason_5"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_reason_6"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_reason_5"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"

            android:text="@string/unlink_reason_6"
            style="@style/body1_regular"
            android:textColor="@color/on_surface" />

        <ImageView
            android:id="@+id/iv_reason_6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_next"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/tv_reason_6"
            app:layout_constraintTop_toTopOf="@id/tv_reason_6"
            app:layout_constraintBottom_toBottomOf="@id/tv_reason_6"
            tools:ignore="ContentDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>