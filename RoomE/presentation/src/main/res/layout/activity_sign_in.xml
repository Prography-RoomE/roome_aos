<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/tv_logo"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/roome_rogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btn_kakao_login"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_btn_kakao"
        app:layout_constraintBottom_toTopOf="@id/btn_google_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_logo"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="12dp"
        app:layout_constraintVertical_bias="0.6"

        android:text="카카오톡으로 계속하기"/>

    <Button
        android:id="@+id/btn_google_login"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_btn_google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_kakao_login"/>


</androidx.constraintlayout.widget.ConstraintLayout>