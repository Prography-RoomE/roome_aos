<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface">
        
        <Toolbar
            android:id="@+id/tb_edit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            android:contentInsetStart="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 수정"
                style="@style/title3_bold"
                android:textColor="@color/on_surface"/>
            
            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="BackButton"
                android:src="@drawable/ic_cancel"
                android:background="@color/transparent"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"/>
        </Toolbar>
        
        <ImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/png_default_profile"

            android:contentDescription="UserProfileImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_edit"
            android:layout_marginTop="8dp"/>

        <ImageButton
            android:id="@+id/ib_user_profile_edit"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="UserProfileEditButton"
            android:src="@drawable/ic_camera"
            android:background="@drawable/shape_background_edit_btn"
            app:layout_constraintEnd_toEndOf="@id/iv_user_profile"
            app:layout_constraintBottom_toBottomOf="@id/iv_user_profile"
            android:layout_marginEnd="-4dp"
            android:layout_marginBottom="-4dp"
            android:elevation="1dp"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/iv_user_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"

            android:text="@string/signup_nickname"
            style="@style/label_bold"
            android:textColor="@color/on_surface"/>

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="0dp"
            android:layout_height="48dp"

            app:layout_constraintTop_toBottomOf="@id/tv_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            android:paddingHorizontal="16dp"

            android:background="@drawable/shape_edit_text"
            style="@style/body2_regular"
            android:textColor="@color/on_surface"
            android:inputType="text"
            android:maxLength="8"
            android:textCursorDrawable="@drawable/shape_custom_cursor"

            tools:ignore="Autofill, LabelFor" />

        <ImageButton
            android:id="@+id/btn_clear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/et_nickname"
            app:layout_constraintBottom_toBottomOf="@id/et_nickname"
            app:layout_constraintEnd_toEndOf="@id/et_nickname"

            android:src="@drawable/ic_clear"
            android:background="@color/transparent"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_nickname_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/et_nickname"
            app:layout_constraintStart_toStartOf="@id/et_nickname"
            android:layout_marginTop="8dp"

            android:text="@string/signup_nickname_default"
            style="@style/caption"
            android:textColor="@color/on_surface"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="24dp"

            android:background="@drawable/shape_radius_12"
            android:backgroundTint="@color/primary_primary"

            android:text="저장하기"
            android:textColor="@color/surface"
            style="@style/title3_bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>